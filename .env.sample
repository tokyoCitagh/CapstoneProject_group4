# Local development env sample
# Copy to .env and fill values (do NOT commit .env)

# Django
SECRET_KEY=replace-me
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database (local Postgres example)
# Example: postgres://user:pass@localhost:5432/imageElectronic
DATABASE_URL=postgres://user:pass@localhost:5432/imageElectronic

# Email (fill if you use SMTP)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your@email
# EMAIL_HOST_PASSWORD=secret
# DEFAULT_FROM_EMAIL=webmaster@example.com

# Use Cloudinary for media in production
# Set USE_CLOUDINARY=true in production when using Cloudinary
USE_CLOUDINARY=false
CLOUDINARY_URL= # optional: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
# Alternatively set parts below
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
USE_CLOUDINARY_FOR_STATIC=false

# (Optional) Use S3 instead of Cloudinary
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_CUSTOM_DOMAIN=
USE_S3_FOR_STATIC=false

# Paystack Payment Gateway
# Get your keys from https://dashboard.paystack.com/#/settings/developers
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here

# Brevo Email API (if using API instead of SMTP)
BREVO_API_KEY=your_brevo_api_key_here

